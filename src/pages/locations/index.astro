---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { business, locations } from '../../data/business';

// Group locations by county
const dentonCounty = locations.filter(l => l.county?.includes('Denton'));
const collinCounty = locations.filter(l => l.county?.includes('Collin') && !l.county?.includes('Denton'));
const dallasCounty = locations.filter(l => l.county?.includes('Dallas') && !l.county?.includes('Collin') && !l.county?.includes('Denton'));
const tarrantCounty = locations.filter(l => l.county?.includes('Tarrant') && !l.county?.includes('Denton'));
---

<Layout 
  title={`Service Areas | Concrete Contractors DFW | ${business.name}`}
  description={`${business.name} provides professional concrete services throughout the Dallas-Fort Worth metroplex. Serving The Colony, Frisco, Plano, and 30+ cities in Denton & Collin counties.`}
  canonical="/locations/"
>
  <Header />
  
  <!-- Hero -->
  <section class="bg-texas pattern-overlay py-16 lg:py-24 relative">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
      <span class="inline-block bg-white/10 text-white px-4 py-1 rounded-full text-sm font-semibold mb-4 backdrop-blur border border-white/20">30+ Cities Served</span>
      <h1 class="text-4xl md:text-5xl font-display font-bold text-white mb-6">
        Concrete Service Areas in DFW
      </h1>
      <p class="text-xl text-primary-100 max-w-3xl mx-auto mb-8">
        {business.name} proudly serves The Colony and communities throughout Denton, Collin, Dallas, and Tarrant counties. Professional concrete work for residential and commercial projects.
      </p>
      <a href={`tel:${business.phoneTel}`} class="inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-white px-8 py-4 rounded-xl font-bold text-lg transition shadow-lg">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        Call {business.phone}
      </a>
    </div>
  </section>
  
  <!-- All Service Areas -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      
      <!-- Denton County -->
      {dentonCounty.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-display font-bold text-dark-900 mb-6 flex items-center gap-3">
            <span class="w-3 h-3 bg-primary-600 rounded-full"></span>
            Denton County
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {dentonCounty.map(location => (
              <a 
                href={`/locations/${location.slug}/`} 
                class={`rounded-xl px-4 py-4 transition font-medium border ${location.primary ? 'bg-primary-600 text-white border-primary-600 hover:bg-primary-700' : 'bg-gray-50 text-gray-700 border-gray-100 hover:bg-primary-50 hover:text-primary-600 hover:border-primary-200'}`}
              >
                <span class="block font-semibold">{location.name}</span>
                {location.distance && (
                  <span class={`text-xs ${location.primary ? 'text-primary-200' : 'text-gray-500'}`}>{location.distance}</span>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
      
      <!-- Collin County -->
      {collinCounty.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-display font-bold text-dark-900 mb-6 flex items-center gap-3">
            <span class="w-3 h-3 bg-accent rounded-full"></span>
            Collin County
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {collinCounty.map(location => (
              <a 
                href={`/locations/${location.slug}/`} 
                class="bg-gray-50 rounded-xl px-4 py-4 text-gray-700 border border-gray-100 hover:bg-primary-50 hover:text-primary-600 hover:border-primary-200 transition font-medium"
              >
                <span class="block font-semibold">{location.name}</span>
                {location.distance && (
                  <span class="text-xs text-gray-500">{location.distance}</span>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
      
      <!-- Dallas County -->
      {dallasCounty.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-display font-bold text-dark-900 mb-6 flex items-center gap-3">
            <span class="w-3 h-3 bg-green-500 rounded-full"></span>
            Dallas County
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {dallasCounty.map(location => (
              <a 
                href={`/locations/${location.slug}/`} 
                class="bg-gray-50 rounded-xl px-4 py-4 text-gray-700 border border-gray-100 hover:bg-primary-50 hover:text-primary-600 hover:border-primary-200 transition font-medium"
              >
                <span class="block font-semibold">{location.name}</span>
                {location.distance && (
                  <span class="text-xs text-gray-500">{location.distance}</span>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
      
      <!-- Tarrant County -->
      {tarrantCounty.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-display font-bold text-dark-900 mb-6 flex items-center gap-3">
            <span class="w-3 h-3 bg-yellow-500 rounded-full"></span>
            Tarrant County
          </h2>
          <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
            {tarrantCounty.map(location => (
              <a 
                href={`/locations/${location.slug}/`} 
                class="bg-gray-50 rounded-xl px-4 py-4 text-gray-700 border border-gray-100 hover:bg-primary-50 hover:text-primary-600 hover:border-primary-200 transition font-medium"
              >
                <span class="block font-semibold">{location.name}</span>
                {location.distance && (
                  <span class="text-xs text-gray-500">{location.distance}</span>
                )}
              </a>
            ))}
          </div>
        </div>
      )}
      
    </div>
  </section>
  
  <!-- Map/Info Section -->
  <section class="py-16 lg:py-24 bg-gray-50">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-display font-bold text-dark-900 mb-4">Our Service Area Coverage</h2>
        <p class="text-xl text-gray-600">
          Based in The Colony, TX, we serve homeowners and businesses within approximately one hour of our location. This includes most of the northern DFW metroplex.
        </p>
      </div>
      
      <div class="bg-white rounded-2xl p-8 shadow-sm border border-gray-100">
        <div class="grid md:grid-cols-2 gap-8">
          <div>
            <h3 class="font-bold text-dark-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7z"/>
              </svg>
              Our Base Location
            </h3>
            <p class="text-gray-600 mb-4">
              {business.address.full}
            </p>
            <p class="text-gray-600">
              We're centrally located to serve The Colony, Frisco, Plano, Lewisville, and all surrounding communities quickly and efficiently.
            </p>
          </div>
          <div>
            <h3 class="font-bold text-dark-900 mb-4 flex items-center gap-2">
              <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M11.99 2C6.47 2 2 6.48 2 12s4.47 10 9.99 10C17.52 22 22 17.52 22 12S17.52 2 11.99 2zM12 20c-4.42 0-8-3.58-8-8s3.58-8 8-8 8 3.58 8 8-3.58 8-8 8zm.5-13H11v6l5.25 3.15.75-1.23-4.5-2.67z"/>
              </svg>
              Response Times
            </h3>
            <ul class="text-gray-600 space-y-2">
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                Same-day estimates available
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                Phone response within 2 hours
              </li>
              <li class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
                </svg>
                Projects often start within 1-2 weeks
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 lg:py-24 bg-texas pattern-overlay relative">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative">
      <h2 class="text-3xl md:text-4xl font-display font-bold text-white mb-6">
        Don't See Your City Listed?
      </h2>
      <p class="text-xl text-primary-100 mb-8">
        We may still serve your area! Give us a call to discuss your project location.
      </p>
      <a href={`tel:${business.phoneTel}`} class="inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-white px-8 py-4 rounded-xl font-bold text-lg transition shadow-lg">
        <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
        </svg>
        Call {business.phone}
      </a>
    </div>
  </section>
  
  <Footer />
</Layout>
