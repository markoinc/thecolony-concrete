const content = serviceContent[service.slug] || serviceContent.driveways;
---

<Layout 
  title={content.title}
  description={`${service.description} Professional ${service.name.toLowerCase()} services in The Colony, TX and DFW. Free estimates! Call ${business.phone}`}
  canonical={`/services/${service.slug}/`}
>
  <Header />
  
  <!-- Hero -->
  <section class="bg-gradient-to-br from-dark-800 to-dark-900 py-16 lg:py-24">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="text-white">
          <a href="/" class="text-accent hover:text-accent-light mb-4 inline-block">&larr; Back to Home</a>
          <h1 class="text-4xl md:text-5xl font-bold mb-6">{content.h1}</h1>
          <p class="text-xl text-gray-300 mb-8">{content.intro}</p>
          <a href={`tel:${business.phoneTel}`} class="inline-flex items-center gap-2 bg-accent hover:bg-accent-dark text-white px-6 py-3 rounded-lg font-bold transition">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
            {business.phone}
          </a>
        </div>
        <div>
          <LeadForm title={`Get a Free ${service.shortName} Quote`} />
        </div>
      </div>
    </div>
  </section>
  
  <!-- Benefits -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Why Choose Concrete {service.shortName}?</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {content.benefits.map(benefit => (
          <div class="flex items-start gap-3 p-4 bg-gray-50 rounded-lg">
            <svg class="w-6 h-6 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9 16.17L4.83 12l-1.42 1.41L9 19 21 7l-1.41-1.41z"/>
            </svg>
            <span class="text-gray-700">{benefit}</span>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12">Our {service.shortName} Services</h2>
      <div class="grid md:grid-cols-2 gap-8">
        {content.features.map(feature => (
          <div class="bg-white p-6 rounded-xl shadow-sm">
            <h3 class="text-xl font-bold text-gray-900 mb-3">{feature.title}</h3>
            <p class="text-gray-600">{feature.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA -->
  <section class="py-16 bg-accent">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center text-white">
      <h2 class="text-3xl font-bold mb-4">Ready to Start Your {service.shortName} Project?</h2>
      <p class="text-xl opacity-90 mb-8">Get a free, no-obligation quote from our expert team today.</p>
      <a href={`tel:${business.phoneTel}`} class="inline-flex items-center gap-2 bg-white text-accent hover:bg-gray-100 px-8 py-4 rounded-lg font-bold text-lg transition">
        Call {business.phone}
      </a>
    </div>
  </section>
  
  <Footer />
</Layout>
