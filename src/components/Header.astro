---
import { business, services } from '../data/business';
---

<!-- Urgency Banner -->
<div class="bg-accent text-white py-2 px-4 text-center text-sm font-medium">
  <span class="animate-pulse inline-block mr-2">ðŸ”¥</span>
  <span class="hidden sm:inline">Limited Availability This Month â€“ </span>
  <a href={`tel:${business.phoneTel}`} class="underline font-bold hover:no-underline">Call Now for Priority Scheduling!</a>
  <span class="animate-pulse inline-block ml-2">ðŸ”¥</span>
</div>

<header class="bg-white sticky top-0 z-50 border-b border-gray-200 shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-3">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3 group">
        <div class="w-12 h-12 bg-primary-600 rounded-xl flex items-center justify-center shadow-md group-hover:shadow-lg transition">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
          </svg>
        </div>
        <div class="hidden sm:block">
          <span class="font-display font-bold text-lg text-dark-900 block leading-tight">{business.shortName}</span>
          <span class="text-xs text-primary-600 font-medium">Serving DFW Since 2009</span>
        </div>
      </a>
      
      <!-- Desktop Nav -->
      <nav class="hidden lg:flex items-center gap-6">
        <a href="/" class="text-gray-700 hover:text-primary-600 font-medium transition">Home</a>
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary-600 font-medium transition flex items-center gap-1 py-4">
            Services
            <svg class="w-4 h-4 transition group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute top-full left-1/2 -translate-x-1/2 bg-white shadow-xl rounded-xl py-3 w-64 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 border border-gray-100">
            {services.map(service => (
              <a href={`/services/${service.slug}/`} class="flex items-center gap-3 px-4 py-2.5 text-gray-700 hover:bg-primary-50 hover:text-primary-600 transition">
                <span class="text-lg">{service.icon}</span>
                <span class="font-medium">{service.name}</span>
              </a>
            ))}
          </div>
        </div>
        <a href="/locations/" class="text-gray-700 hover:text-primary-600 font-medium transition">Service Areas</a>
        <a href="/about/" class="text-gray-700 hover:text-primary-600 font-medium transition">About</a>
        <a href="/contact/" class="text-gray-700 hover:text-primary-600 font-medium transition">Contact</a>
      </nav>
      
      <!-- Desktop CTA -->
      <div class="hidden lg:flex items-center gap-4">
        <div class="text-right">
          <p class="text-xs text-gray-500">Call or Text 24/7</p>
          <a href={`tel:${business.phoneTel}`} class="font-bold text-primary-600 hover:text-primary-700 transition">{business.phone}</a>
        </div>
        <a href={`tel:${business.phoneTel}`} class="bg-accent hover:bg-accent-dark text-white px-5 py-2.5 rounded-lg font-bold transition flex items-center gap-2 shadow-md hover:shadow-lg">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
          </svg>
          Free Quote
        </a>
      </div>
      
      <!-- Mobile Menu Toggle -->
      <button id="mobile-menu-toggle" class="lg:hidden p-2 rounded-lg hover:bg-gray-100 transition" aria-label="Toggle menu">
        <svg class="w-6 h-6 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
    
    <!-- Mobile Menu -->
    <div id="mobile-menu" class="lg:hidden hidden pb-4 border-t border-gray-100 pt-4">
      <nav class="flex flex-col gap-1">
        <a href="/" class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 py-3 px-4 font-medium rounded-lg transition">Home</a>
        <div class="py-2 px-4">
          <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-2">Services</p>
          <div class="grid grid-cols-2 gap-2">
            {services.map(service => (
              <a href={`/services/${service.slug}/`} class="text-gray-600 hover:text-primary-600 hover:bg-primary-50 py-2 px-3 text-sm rounded-lg transition flex items-center gap-2">
                <span>{service.icon}</span>
                {service.shortName}
              </a>
            ))}
          </div>
        </div>
        <a href="/locations/" class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 py-3 px-4 font-medium rounded-lg transition">Service Areas</a>
        <a href="/about/" class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 py-3 px-4 font-medium rounded-lg transition">About</a>
        <a href="/contact/" class="text-gray-700 hover:text-primary-600 hover:bg-primary-50 py-3 px-4 font-medium rounded-lg transition">Contact</a>
      </nav>
    </div>
  </div>
</header>
