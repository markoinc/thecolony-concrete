---
import { business, services, locations } from '../data/business';
---

<footer class="bg-dark-900 text-gray-300">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 bg-accent rounded-lg flex items-center justify-center">
            <span class="text-white font-bold">TC</span>
          </div>
          <span class="font-bold text-white text-lg">{business.name}</span>
        </div>
        <p class="text-gray-400 mb-4">{business.description}</p>
        <div class="space-y-2">
          <a href={`tel:${business.phoneTel}`} class="flex items-center gap-2 text-accent hover:text-accent-light">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
            {business.phone}
          </a>
          <a href={`mailto:${business.email}`} class="flex items-center gap-2 text-gray-400 hover:text-white">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
            {business.email}
          </a>
          <p class="flex items-center gap-2 text-gray-400">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            {business.address.full}
          </p>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Services</h3>
        <ul class="space-y-2">
          {services.map(service => (
            <li>
              <a href={`/services/${service.slug}/`} class="text-gray-400 hover:text-accent transition">{service.name}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Service Areas</h3>
        <ul class="space-y-2">
          {locations.slice(0, 10).map(location => (
            <li>
              <a href={`/locations/${location.slug}/`} class="text-gray-400 hover:text-accent transition">{location.name}</a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-semibold text-lg mb-4">Quick Links</h3>
        <ul class="space-y-2">
          <li><a href="/" class="text-gray-400 hover:text-accent transition">Home</a></li>
          <li><a href="/about/" class="text-gray-400 hover:text-accent transition">About Us</a></li>
          <li><a href="/contact/" class="text-gray-400 hover:text-accent transition">Contact</a></li>
          <li><a href="/privacy/" class="text-gray-400 hover:text-accent transition">Privacy Policy</a></li>
          <li><a href="/terms/" class="text-gray-400 hover:text-accent transition">Terms of Service</a></li>
        </ul>
      </div>
    </div>
  </div>
  
  <div class="border-t border-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          &copy; {new Date().getFullYear()} {business.name}. All rights reserved.
        </p>
        <p class="text-gray-500 text-sm">
          Serving The Colony, TX and the DFW Metroplex
        </p>
      </div>
    </div>
  </div>
</footer>
