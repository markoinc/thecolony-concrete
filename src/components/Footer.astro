---
import { business, services, locations } from '../data/business';

const currentYear = new Date().getFullYear();
const topLocations = locations.slice(0, 12);
---

<footer class="bg-dark-900 text-white">
  <!-- Main Footer Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-12">
      
      <!-- Company Info -->
      <div class="lg:col-span-1">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-12 h-12 bg-primary-600 rounded-xl flex items-center justify-center">
            <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <div>
            <span class="font-display font-bold text-xl block">{business.shortName}</span>
          </div>
        </div>
        <p class="text-gray-400 mb-6 leading-relaxed">
          Professional concrete contractors proudly serving The Colony, Texas and the entire DFW metroplex since 2009. Quality craftsmanship, fair pricing, and customer satisfaction guaranteed.
        </p>
        <div class="space-y-3">
          <a href={`tel:${business.phoneTel}`} class="flex items-center gap-3 text-white hover:text-accent transition group">
            <div class="w-10 h-10 bg-dark-700 group-hover:bg-accent rounded-lg flex items-center justify-center transition">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
              </svg>
            </div>
            <div>
              <p class="text-xs text-gray-500">Call or Text</p>
              <p class="font-semibold">{business.phone}</p>
            </div>
          </a>
          <a href={`mailto:${business.email}`} class="flex items-center gap-3 text-gray-400 hover:text-white transition group">
            <div class="w-10 h-10 bg-dark-700 group-hover:bg-primary-600 rounded-lg flex items-center justify-center transition">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
              </svg>
            </div>
            <span class="text-sm">{business.email}</span>
          </a>
        </div>
      </div>
      
      <!-- Services -->
      <div>
        <h4 class="font-display font-bold text-lg mb-6 text-white">Our Services</h4>
        <ul class="space-y-3">
          {services.map(service => (
            <li>
              <a href={`/services/${service.slug}/`} class="text-gray-400 hover:text-white transition flex items-center gap-2 group">
                <span class="text-sm">{service.icon}</span>
                <span class="group-hover:translate-x-1 transition-transform">{service.name}</span>
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div>
        <h4 class="font-display font-bold text-lg mb-6 text-white">Service Areas</h4>
        <ul class="grid grid-cols-2 gap-2">
          {topLocations.map(location => (
            <li>
              <a href={`/locations/${location.slug}/`} class="text-gray-400 hover:text-white transition text-sm">
                {location.name}
              </a>
            </li>
          ))}
        </ul>
        <a href="/locations/" class="inline-flex items-center gap-1 text-accent hover:text-accent-light mt-4 text-sm font-medium transition">
          View All Areas
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      
      <!-- Hours & CTA -->
      <div>
        <h4 class="font-display font-bold text-lg mb-6 text-white">Business Hours</h4>
        <div class="space-y-2 mb-6">
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Monday - Friday</span>
            <span class="text-white font-medium">7:00 AM - 6:00 PM</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Saturday</span>
            <span class="text-white font-medium">8:00 AM - 4:00 PM</span>
          </div>
          <div class="flex justify-between text-sm">
            <span class="text-gray-400">Sunday</span>
            <span class="text-gray-500">Closed</span>
          </div>
        </div>
        
        <div class="bg-dark-800 rounded-xl p-4 border border-dark-700">
          <p class="text-sm text-gray-300 mb-3">Ready to start your project?</p>
          <a href="/contact/" class="w-full bg-accent hover:bg-accent-dark text-white py-3 px-4 rounded-lg font-bold text-center block transition">
            Get Free Estimate
          </a>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom Bar -->
  <div class="border-t border-dark-700">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex flex-col md:flex-row justify-between items-center gap-4">
        <p class="text-gray-500 text-sm">
          &copy; {currentYear} {business.name}. All rights reserved.
        </p>
        <div class="flex items-center gap-6 text-sm">
          <a href="/privacy/" class="text-gray-500 hover:text-white transition">Privacy Policy</a>
          <a href="/terms/" class="text-gray-500 hover:text-white transition">Terms of Service</a>
          <span class="text-gray-600">|</span>
          <span class="text-gray-500">Proudly Serving Texas</span>
          <span class="text-2xl">ðŸ¤ </span>
        </div>
      </div>
    </div>
  </div>
</footer>
